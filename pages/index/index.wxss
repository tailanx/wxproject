/**index.wxss**/

@import "../../template/movie-template/movie-template.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.search {
  width: 90vw;
  text-align: center;
  margin: 15px auto;
  background-color: #d7d7d7;
  height: 30px;
  line-height: 30px;
  align-items: center;
  color: rgba(0, 0, 0, 0.3);
}

.search icon {
  margin-right: 8px;
}

.navigator {
  width: 10 0%;
  height: 100%;
}

.banner image {
  width: 100%;
  height: 100%;
}

.subject .title {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 14rpx;
  font-size: 14px;
}

.look_more {
  color: #42bd56;
}



