/* search/search.wxss */

.search_box {
  display: flex;
  background-color: #42bd56;
  width: 100vw;
  height: 100rpx;
  position: fixed;
  top: 0;
  align-items: center;
}

.search_box .search_detail {
  flex: 1;
  display: flex;
  background-color: #fff;
  height: 60rpx;
  margin-left: 30rpx;
  border-radius: 12rpx;
  align-items: center;
}

.search_box .search_icon {
  margin: 10rpx;
}

.search_box .search_input {
  color: #000;
  font-size: 28rpx;
  flex: 1;
}

.cancel {
  font-size: 24rpx;
  color: #fff;
  width: 80rpx;
  text-align: center;
}
.search_scroll{
  position: fixed;
  top: 100rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  white-space: nowrap;
  margin-top: 30rpx
}

.search_name{
 font-size: 28rpx;
 text-overflow: ellipsis;
 overflow: hidden;
 margin: 10rpx ;
 display: inline-block
}
.search_img{
  width: 100%;
  height: 100%;
}

.search_img image{
    width: 250rpx;
}
.search_item{
  text-align: center;
  margin-bottom: 30rpx;
  /* width: 100%; */
}