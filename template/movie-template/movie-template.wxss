
.movie_item {
  margin-left: 14rpx;
  width: 160rpx;
}



.movielist {
  display: flex;
  flex-wrap: nowrap;
  margin-right: 14rpx;
}

.movie-name {
  font-size: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.movie_item .movie_img {
  width: 160rpx;
  height: 300rpx;
  border-radius: 8px;
  border: 1px solid #ddd;
}
.movie_img image{
  border-radius: 8px;
   width: 160rpx;
  height: 250rpx;
}


.search_scroll{
  position: fixed;
  top: 100rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  white-space: nowrap;
  margin-top: 30rpx
}

.search_name{
 font-size: 28rpx;
 text-overflow: ellipsis;
 overflow: hidden;
 margin: 10rpx ;
 display: inline-block
}
.search_img{
  width: 100%;
  height: 100%;
}

.search_img image{
    width: 250rpx;
}
